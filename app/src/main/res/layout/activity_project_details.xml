<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProjectDetails"
    android:background="@drawable/profilel_header">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/projecttitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ffffff"
            android:padding="10dp"
            android:textSize="35dp"
            android:gravity="center"
            android:background="@drawable/profilel_header"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ratings:"
                android:textColor="#ffffff"
                android:padding="10dp"
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/ratingPro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="0"
                android:padding="10dp"
                android:textSize="20dp"/>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:padding="10dp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/fulladdress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textColor="#ffffff"
            android:padding="10dp"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type of HVAC:"
            android:textColor="#ffffff"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/typeOf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:padding="10dp"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Capacity(in TR):"
            android:textColor="#ffffff"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/capacityTR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:padding="10dp"
            android:textSize="20dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/white"/>

        <TextView
            android:id="@+id/lattitudePro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lattitude"
            android:textColor="#ffffff"
            android:padding="10dp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/longitudePro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="Longitude"
            android:padding="10dp"
            android:textSize="20dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white"/>

        <ImageView
            android:id="@+id/direct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/button"
            android:src="@android:drawable/ic_dialog_map"
            android:layout_gravity="center"
            android:padding="7dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/white"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>