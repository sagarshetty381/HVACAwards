<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GiveRatings"
    android:background="@drawable/profilel_header">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rprojecttitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="#ffffff"
            android:padding="10dp"
            android:textSize="35dp"
            android:gravity="center"
            android:background="@drawable/profilel_header"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:textColor="#ffffff"
            android:padding="10dp"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/rfulladdress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textColor="#ffffff"
            android:padding="10dp"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capacity in TR:"
                android:textColor="#ffffff"
                android:padding="10dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/capacityrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:padding="10dp"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HVAC fields:"
                android:textColor="#ffffff"
                android:padding="10dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/hvacfields"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:padding="10dp"
                android:textSize="20dp"/>
        </LinearLayout>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
        </android.support.v7.widget.CardView>
        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:max="10"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="5"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/giverating"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="DONE"
            android:layout_margin="15dp"
            android:background="@drawable/profilel_header"
            android:layout_gravity="center"/>

    </LinearLayout>
</ScrollView>